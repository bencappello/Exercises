<h1><%= @album.name %></h1>

<h2>Tracks</h2>

<ul>
  <% @album.tracks.each do |track| %>
    <li><%= link_to(track.name, track_url(track.id)) %>
  <% end %>
</ul>

<br>

<ul>
  <li><%= link_to("New track", new_album_track_url(@album)) %></li>
  <li><%= link_to("Edit Album", edit_album_url(@album)) %></li>
  <li><%= link_to("Delete Album", albums_url(@album), method: :delete, class: 'btn') %></li>
  <li><%= link_to(@album.band.name, band_url(@album.band)) %></li>
</ul>
