<h1><%= title %></h1>
<%= render "shared/errors" %>

<form action="<%= action_url %>" method="POST">
  <%= auth_token %>

  <input type="hidden" name="_method" value="<%= form_method %>">

  <label for="band_name">Band name</label>
  <input
    type="text"
    name="band[name]"
    id="band_name"
    value="<%= band.name %>"
  >

  <input type="submit" value=<%= submit_text %>>


</form>
